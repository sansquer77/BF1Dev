# BF1Dev 3.0 - Configurações de Ambiente
# Copie este arquivo para .env e preencha com seus valores

# ============ BANCO DE DADOS ============
DATABASE_PATH=./data/bolao_f1.db
DB_POOL_SIZE=5
DB_TIMEOUT=30.0

# ============ SEGURANÇA ============
JWT_SECRET=your_jwt_secret_key_change_me_in_production
BCRYPT_ROUNDS=12

# ============ EMAIL ============
EMAIL_REMETENTE=seu_email@gmail.com
SENHA_EMAIL=sua_senha_app_ou_token
EMAIL_ADMIN=admin@seudominio.com

# ============ USUÁRIO MASTER (Criação automática) ============
usuario_master=YOUR_MASTER_USERNAME_HERE
email_master=master@sistema.local
senha_master=YOUR_SECURE_PASSWORD_HERE

# ============ CACHE ============
CACHE_TTL_CURTO=300
CACHE_TTL_MEDIO=3600
CACHE_TTL_LONGO=86400

# ============ SEGURANÇA - RATE LIMITING ============
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ============ STREAMLIT ============
STREAMLIT_SERVER_MAXUPLOADSIZE=200
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_CLIENT_TOOLBARMODE=minimal
STREAMLIT_LOGGER_LEVEL=info
